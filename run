#!/bin/bash

# Check if the argument is 'install'
if [ "$1" == "install" ]; then
  echo "Installing.."
  npm install
  npm run build
  if [ $? -eq 0 ]; then
    echo "Install succeeded. Build successful."
    exit 0
  else
    echo "Install failed"
    exit 1
  fi
elif [ "$1" == "test" ]; then
  node dist/testOutput.js "$1"
elif [ -f "$1" ]; then
  # Handle the case where the argument is a file
  node dist/index.js "$1"
fi
